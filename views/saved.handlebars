<div class="container">
  <!--Jumbotron-->
  <div class="jumbotron">
    {{!-- <h1 class="display-4"><i class="fas fa-hamburger"></i> Eat A Burger</h1> --}}
    <h1>KU Basketball News Scrapper</h1>
    <button id = "scrape"><a href="/scrape">Let's Scrap!</a></button>
    <button id = "home"><a href="/">Home</a></button>
    {{!-- <button>Saved Articles</button> --}}
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white" id="savedHeader">
          Saved Articles
        </div>
        <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="card">
                    <div class="card-header">
                        <a href={{this.link}} target="_blank"><h4>{{this.title}}</h4></a>
                    </div>
                    <div class="card-body">
                        <p> {{this.summary}}</p>
                        {{!-- <a href={{this.link}} target="_blank">{{this.link}}</a> --}}
                        <br>
                        <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>View/Add Notes</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
      </div>
    </div>
  </div>